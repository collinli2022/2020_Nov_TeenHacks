<HeartRateLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 10
    Image:
        id: imageCamera
        source: 'mini.jpg'
    Button:
        id: buttonStart
        text: 'Start'
        on_press: root.startCamera(imageCamera, buttonStart, buttonStop, labelBpm)
        height: 50
        size_hint_y: None
        disabled: False
    Button:
        id: buttonStop
        text: 'Stop'
        on_press: root.stopCamera(imageCamera, buttonStart, buttonStop, labelBpm)
        height: 50
        size_hint_y: None
        disabled: True
    Label:
        id: labelBpm
        text: 'Ur dead ;)... no just wait'
        height: 50
        size_hint_y: None

<FacialAttributeLayout>:
    orientation: 'vertical'
    Camera:
        id: camera
        resolution: (1920, 1080)
        play: False
    ToggleButton:
        text: 'Start Camera'
        on_press: camera.play = not camera.play
        height: 50
        size_hint_y: None
        height: '48dp'
    Button:
        id: buttonCapture
        text: 'Capture'
        on_press: root.capture(buttonCapture, results)
        height: 50
        size_hint_y: None
        disabled: False
    Label:
        id: results
        text: 'Take a photo to see'
        height: 50
        size_hint_y: None

<ComplementsLayout>
    orientation: 'vertical'
    Label:
        id: joke
        text: 'I\'m pretty punny'
        height: 50
        size_hint_y: None
    Button:
        id: newJoke
        text: 'get new joke'
        on_press: root.newJoke(joke)
        height: 50
        size_hint_y: None

<CovidLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 10
    Label:
        id: Global
        text: 'Global'
        height: 50
        size_hint_y: None
    Label:
        id: NewConfirmed
        text: 'New cases'
        height: 25
        size_hint_y: None
    Label:
        id: TotalConfirmed
        text: 'Total'
        height: 25
        size_hint_y: None
    Label:
        id: NewDeaths
        text: 'New Deaths'
        height: 25
        size_hint_y: None
    Label:
        id: NewRecovered
        text: 'New Recovered'
        height: 25
        size_hint_y: None
    Label:
        id: TotalRecovered
        text: 'Total Recovered'
        height: 25
        size_hint_y: None
    Button:
        id: refresh
        text: 'refresh'
        on_press: root.refresh(NewConfirmed, TotalConfirmed, NewDeaths, NewRecovered, TotalRecovered)
        height: 50
        size_hint_y: None